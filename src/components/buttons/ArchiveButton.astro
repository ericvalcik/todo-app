---
import ArchiveIcon from "../icons/Archive.astro";

interface Props {
  id: string;
}

const { id } = Astro.props;
---

<button
  type="button"
  class="flex gap-1 px-2 rounded-full border-2 border-solid border-stone-500 text-stone-500 font-semibold hover:text-stone-700 hover:border-stone-700 hover:bg-white"
  hx-vals={`{"id": "${id}"}`}
  hx-get="/htmx/archive-todo"
  hx-target="closest .todo"
  hx-swap="outerHTML"
>
  <ArchiveIcon />
</button>
